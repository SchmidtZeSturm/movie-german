{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "target": "esnext",
    "strict": true,
    "outDir": "./dist",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~config-jest": ["jest.config.ts"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.spec.ts"
  ]
}